generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id            String  @id
  first_name    String
  last_name     String
  age           Int
  email         String
  username      String
  password      String
  role          Roles
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([email], map: "idx_email")
  @@index([username], map: "idx_username")
  @@index([role], map: "idx_role")
  @@index([id], map: "idx_id")


}

enum Roles {
  BASIC
  ADMIN
}

model Movies {
  id            String  @id
 title          String
  episode       Int
  director      String
  opening_crawl String
  producer      String
  release_date   String
  origin        String
  other_details Json
  zaga          String
  created_at     DateTime @default(now())
  updated_at     DateTime @updatedAt
}
